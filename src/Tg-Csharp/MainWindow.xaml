<Window x:Class="Tg.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tg_Csharp"
        mc:Ignorable="d"
        Title="TG" Height="660" Width="1037">
    <Grid>
        <ContentControl Content="RENDER" x:Name="renderingGoesHere" HorizontalAlignment="Left" Margin="200,10,0,0" VerticalAlignment="Top" Height="610" Width="819"/>
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="610" Margin="10,10,0,0" VerticalAlignment="Top" Width="185">
            <TabItem Header="Terrain">
                <Grid Background="#FFE5E5E5">
                    <Label x:Name="label" Content="Label" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="24" Margin="53,12,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="112"/>
                    <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="155"/>
                    <Slider x:Name="terrainGenerationLevel" HorizontalAlignment="Left" Margin="53,68,0,0" VerticalAlignment="Top" Width="112" Minimum="1" Maximum="6" TickPlacement="BottomRight" SmallChange="1" Value="4" IsSnapToTickEnabled="True"/>
                    <Label x:Name="TGLLabel" Content="{Binding ElementName=terrainGenerationLevel, Path=Value, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Margin="10,68,0,0" VerticalAlignment="Top" Height="22" Width="38" FontFamily="Trebuchet MS" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                        <Label.Background>
                            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0" Opacity="0.5">
                                <LinearGradientBrush.RelativeTransform>
                                    <TransformGroup>
                                        <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                                        <SkewTransform CenterY="0.5" CenterX="0.5"/>
                                        <RotateTransform Angle="-90" CenterY="0.5" CenterX="0.5"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </LinearGradientBrush.RelativeTransform>
                                <GradientStop Color="#00000000"/>
                                <GradientStop Color="#FFDD6CFF" Offset="1"/>
                            </LinearGradientBrush>
                        </Label.Background>
                    </Label>
                </Grid>
            </TabItem>
            <TabItem Header="Rendering">
                <Grid Background="#FFE5E5E5">
                    <Slider x:Name="slider" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="155"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
